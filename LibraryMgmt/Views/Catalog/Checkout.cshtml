@model LibraryMgmt.Models.Checkout.CheckoutModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="container">
    <div class="header clearfix detailHeading">
        <h2 class="text-muted">Checkout Library Item</h2>
    </div>

    <div class="jumbotron">
        <div class="row">
            <div class="col-md-3">
                <div>
                    <p id="itemTitle">@Model.Title</p>
                    <img class="detailImage" src="@Model.ImageUrl" />
                </div>
            </div>
            @*you could also use tag helpers.*@
            <div class="col-md-9">
                @*this is an html helper - it creates an object that implements idisposable*@
                <form asp-controller="Catalog" asp-action="PlaceCheckout" method="post">
                    <input type="hidden" asp-for="AssetId" />
                    <div>
                        Please insert a Library Card ID.
                        <input asp-for="LibraryCardId" />
                    </div>
                    <div>
                        <input type="submit" class="btn btn-success btn-lg" value="Check out"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

